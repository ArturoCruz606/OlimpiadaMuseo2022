@using OlimpiadaMuseo2022.Core.Museo;
@model IEnumerable<CMuseo>;
@{
    ViewData["Title"] = "Museo - Listado";
}

<h1 class="text-center">Museo</h1>
@if (Model.Count() != 0)
{
    <h3>Museos</h3>
    <br><br>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                @* <th scope="col" colspan="2">Acciones</th> *@
            </tr>
        </thead>
        <tbody class="">
            @foreach (var museo in Model)
            {
                <tr>
                    <th scope="row"><a asp-action="Detalle" asp-route-Id="@museo.ID">@museo.Nombre</a></th>
                    @* <td><a asp-action="Detalle" asp-route-Id="@liga.Id">Detalle <i class="bi bi-eyeglasses" style="color: black;"></i></a></td>
                    <td><a asp-action="Modificar" asp-route-Id="@liga.Id">Modificar <i class="bi bi-pencil-fill" style="color: black;"></i></a></td> *@
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>No hay Museos cargados</h4>
}